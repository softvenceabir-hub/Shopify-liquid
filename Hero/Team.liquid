<style>
  .team-section {
    padding: 2rem 0;
    background:black;
  }

  .team-container {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    width: 80%;
    margin: 0 auto;
    flex-wrap: wrap;
  }
.team-card {
  position: relative;
  width: calc(30% - 1rem);
  border-radius: 0.75rem;
  overflow: hidden;
  background: white;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  transition: all 0.4s ease;
  transform: perspective(900px) rotateX(0deg) rotateY(0deg);
}

/* Border Animation - Always Visible */
.team-card::before {
  content: '';
  position: absolute;
  inset: -3px;
  border-radius: 0.75rem;
  padding: 3px;
  background: linear-gradient(90deg, #4f46e5, #06b6d4, #8b5cf6, #ec4899, #4f46e5);
  background-size: 300% 300%;
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  opacity: 1;
  animation: borderRotate 4s linear infinite;
  z-index: 0;
}

.team-card:hover::before {
  animation: borderRotate 2s linear infinite;
}

/* Card Transform + Hover Animation */
.team-card:hover {
  transform: perspective(900px) rotateX(4deg) rotateY(2deg) scale(1.02);
  box-shadow: 0 25px 30px -5px rgba(0, 0, 0, 0.8);
}

@keyframes borderRotate {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}


  .team-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.95);
  }

  .team-image-wrapper {
    position: relative;
    height: 30rem;
    overflow: hidden;
    z-index: 1;
  }

  .team-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .team-card:hover .team-image {
    transform: scale(1.05);
  }

  .team-content {
    padding: 1.5rem;
    text-align: center;
    background: black;
    position: relative;
    z-index: 1;
  }

  .team-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.5rem;
  }

  .team-description {
    color: #6b7280;
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  .team-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #3a8735;
    color:black;
    color: white;
    font-weight: 500;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }

  .team-button:hover {
    background-color:white;
    color:black;
  }

  @media (max-width: 768px) {
    .team-container {
      flex-direction: column;
      width: 90%;
    }

    .team-card {
      width: 100%;
    }

    .team-image-wrapper {
      height: 18rem;
    }
  }
</style>

<section class="team-section">
  <div class="team-container">
    {% for block in section.blocks %}
      <article class="team-card">
        <div class="team-image-wrapper">
          {% if block.settings.image != blank %}
            <img 
              class="team-image" 
              src="{{ block.settings.image | img_url: '800x800', crop: 'center' }}" 
              alt="{{ block.settings.name }}"
              loading="lazy"
            />
          {% else %}
            <img 
              class="team-image" 
              src="{{ 'placeholder.svg' | asset_url }}" 
              alt="{{ block.settings.name }}"
            />
          {% endif %}
        </div>
        
        <div class="team-content">
          <h3 class="team-title">{{ block.settings.name }}</h3>
          <p class="team-description">{{ block.settings.position }}</p>
          
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="team-button">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </article>
    {% endfor %}
  </div>
</section>

