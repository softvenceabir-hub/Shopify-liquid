{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-project-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px {{ block.settings.horizontal_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-project-grid__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-project-grid__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
  }

  .ai-project-grid__item-{{ ai_gen_id }}:nth-child(1) {
    grid-column: span 5;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:nth-child(2) {
    grid-column: span 7;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:nth-child(3) {
    grid-column: span 7;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:nth-child(4) {
    grid-column: span 5;
  }

  .ai-project-grid__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-project-grid__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:hover .ai-project-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-project-grid__content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    position: relative;
  }

  .ai-project-grid__header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-project-grid__number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.number_color }};
    line-height: 1;
  }

  .ai-project-grid__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    transition: transform 0.3s ease;
  }

  .ai-project-grid__item-{{ ai_gen_id }}:hover .ai-project-grid__icon-{{ ai_gen_id }} {
    transform: translate(4px, -4px);
  }

  .ai-project-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-project-grid__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-project-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.5 }}px {{ block.settings.horizontal_padding | times: 0.5 }}px;
    }

    .ai-project-grid__container-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.5 }}px;
    }

    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(1),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(2),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(3),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(4) {
      grid-column: span 12;
    }

    .ai-project-grid__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }

    .ai-project-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-project-grid__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(1),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(2),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(3),
    .ai-project-grid__item-{{ ai_gen_id }}:nth-child(4) {
      grid-column: span 6;
    }
  }
{% endstyle %}

<div class="ai-project-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-project-grid__container-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign project_image_key = 'project_' | append: i | append: '_image'
        assign project_title_key = 'project_' | append: i | append: '_title'
        assign project_description_key = 'project_' | append: i | append: '_description'
        assign project_link_key = 'project_' | append: i | append: '_link'

        assign project_image = block.settings[project_image_key]
        assign project_title = block.settings[project_title_key]
        assign project_description = block.settings[project_description_key]
        assign project_link = block.settings[project_link_key]

        if i < 10
          assign project_number = '0' | append: i
        else
          assign project_number = i
        endif
      %}

      <article class="ai-project-grid__item-{{ ai_gen_id }}">
        {% if project_link != blank %}
          <a href="{{ project_link }}" style="text-decoration: none; color: inherit; display: block;">
        {% endif %}

        <div class="ai-project-grid__image-wrapper-{{ ai_gen_id }}">
          {% if project_image %}
            <img
              src="{{ project_image | image_url: width: 1200 }}"
              alt="{{ project_title | escape }}"
              class="ai-project-grid__image-{{ ai_gen_id }}"
              loading="lazy"
              width="1200"
              height="{{ 1200 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
            >
          {% else %}
            <div class="ai-project-grid__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div class="ai-project-grid__content-{{ ai_gen_id }}">
          <div class="ai-project-grid__header-{{ ai_gen_id }}">
            <span class="ai-project-grid__number-{{ ai_gen_id }}">{{ project_number }}</span>
            <svg
              class="ai-project-grid__icon-{{ ai_gen_id }}"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </div>

          {% if project_title != blank %}
            <h3 class="ai-project-grid__title-{{ ai_gen_id }}">{{ project_title }}</h3>
          {% endif %}

          {% if project_description != blank %}
            <p class="ai-project-grid__description-{{ ai_gen_id }}">{{ project_description }}</p>
          {% endif %}
        </div>

        {% if project_link != blank %}
          </a>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</div>

