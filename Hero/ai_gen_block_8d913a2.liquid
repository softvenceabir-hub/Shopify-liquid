<script>
  (function() {
    class HorizontalScroll{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.scrollSection = this.querySelector('[data-scroll-section]');
        this.scrollList = this.querySelector('[data-scroll-list]');
        this.scrollItems = this.querySelectorAll('[data-scroll-item]');
        this.scrollTitles = this.querySelectorAll('[data-scroll-title]');
        this.itemCount = this.scrollItems.length;
      }

      connectedCallback() {
        if (this.itemCount === 0) return;

        this.setupScrollAnimation();
        window.addEventListener('resize', this.handleResize.bind(this));
      }

      disconnectedCallback() {
        window.removeEventListener('resize', this.handleResize.bind(this));
      }

      handleResize() {
        this.setupScrollAnimation();
      }

      setupScrollAnimation() {
        const totalScrollDistance = this.itemCount * window.innerWidth;
        this.scrollSection.style.height = `${totalScrollDistance}px`;

        window.addEventListener('scroll', this.handleScroll.bind(this));
      }

      handleScroll() {
        const sectionTop = this.scrollSection.offsetTop;
        const sectionHeight = this.scrollSection.offsetHeight;
        const scrollY = window.scrollY;
        const viewportHeight = window.innerHeight;

        if (scrollY >= sectionTop && scrollY <= sectionTop + sectionHeight - viewportHeight) {
          const scrollProgress = (scrollY - sectionTop) / (sectionHeight - viewportHeight);
          const maxTranslate = (this.itemCount - 1) * 100;
          const translateX = scrollProgress * maxTranslate;

          this.scrollList.style.transform = `translateX(-${translateX}vw)`;

          this.scrollTitles.forEach((title, index) => {
            const itemProgress = scrollProgress * this.itemCount;
            const itemStart = index;
            const itemEnd = index + 1;

            if (itemProgress >= itemStart && itemProgress <= itemEnd) {
              const localProgress = itemProgress - itemStart;
              const titleTranslate = 800 - (localProgress * 1600);
              title.style.transform = `translateX(${titleTranslate}px)`;
            }
          });
        }
      }
    }

    customElements.define('horizontal-scroll-{{ ai_gen_id }}', HorizontalScroll{{ ai_gen_id }});
  })();
</script>

