{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-gallery-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-image-gallery__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-image-gallery__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ block.settings.card_min_width }}px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-image-gallery__card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    cursor: pointer;
    background-color: {{ block.settings.card_background }};
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-image-gallery__card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-image-gallery__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-image-gallery__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-image-gallery__card-{{ ai_gen_id }}:hover .ai-image-gallery__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-image-gallery__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    padding: 20px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .ai-image-gallery__card-{{ ai_gen_id }}:hover .ai-image-gallery__overlay-{{ ai_gen_id }} {
    transform: translateY(0);
  }

  .ai-image-gallery__title-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ai-image-gallery__description-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    font-size: {{ block.settings.description_font_size }}px;
    margin: 0 0 12px 0;
    line-height: 1.5;
    opacity: 0.9;
  }

  .ai-image-gallery__tags-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .ai-image-gallery__tag-{{ ai_gen_id }} {
    background-color: {{ block.settings.tag_background }};
    color: {{ block.settings.tag_text_color }};
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
  }

  .ai-image-gallery__placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 0;
    left: 0;
  }

  .ai-image-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-image-gallery__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-image-gallery__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.85 }}px;
    }

    .ai-image-gallery__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-gallery__container-{{ ai_gen_id }}">
    <div class="ai-image-gallery__grid-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign title_key = 'title_' | append: i
          assign description_key = 'description_' | append: i
          assign tag1_key = 'tag1_' | append: i
          assign tag2_key = 'tag2_' | append: i
          assign tag3_key = 'tag3_' | append: i
          assign url_key = 'url_' | append: i

          assign card_image = block.settings[image_key]
          assign card_title = block.settings[title_key]
          assign card_description = block.settings[description_key]
          assign card_tag1 = block.settings[tag1_key]
          assign card_tag2 = block.settings[tag2_key]
          assign card_tag3 = block.settings[tag3_key]
          assign card_url = block.settings[url_key]
        %}

        {% if card_image != blank or card_title != blank %}
          <div class="ai-image-gallery__card-{{ ai_gen_id }}">
            {% if card_url != blank %}
              <a href="{{ card_url }}" style="display: block; text-decoration: none;">
            {% endif %}

            <div class="ai-image-gallery__image-wrapper-{{ ai_gen_id }}">
              {% if card_image %}
                <img
                  src="{{ card_image | image_url: width: 800 }}"
                  alt="{{ card_title | escape }}"
                  class="ai-image-gallery__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                >
              {% else %}
                <div class="ai-image-gallery__placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}

              <div class="ai-image-gallery__overlay-{{ ai_gen_id }}">
                {% if card_title != blank %}
                  <h3 class="ai-image-gallery__title-{{ ai_gen_id }}">{{ card_title }}</h3>
                {% endif %}

                {% if card_description != blank %}
                  <p class="ai-image-gallery__description-{{ ai_gen_id }}">{{ card_description }}</p>
                {% endif %}

                {% if card_tag1 != blank or card_tag2 != blank or card_tag3 != blank %}
                  <div class="ai-image-gallery__tags-{{ ai_gen_id }}">
                    {% if card_tag1 != blank %}
                      <span class="ai-image-gallery__tag-{{ ai_gen_id }}">{{ card_tag1 }}</span>
                    {% endif %}
                    {% if card_tag2 != blank %}
                      <span class="ai-image-gallery__tag-{{ ai_gen_id }}">{{ card_tag2 }}</span>
                    {% endif %}
                    {% if card_tag3 != blank %}
                      <span class="ai-image-gallery__tag-{{ ai_gen_id }}">{{ card_tag3 }}</span>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>

            {% if card_url != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

